{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "rootDir": ".",
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "exclude": ["./**/*.test.ts", "./dist/**/*.ts"]
}
